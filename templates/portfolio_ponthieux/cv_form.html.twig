{% extends "base.html.twig" %}

{% block body %}
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription - Télécharger mon CV</title>
    <link href="https://bootswatch.com/5/morph/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light text-dark">
    <div class="container my-5 p-4 bg-white rounded shadow-lg">
        <h1 class="text-center text-primary">Inscription</h1>
        <p class="text-center">Veuillez remplir le formulaire ci-dessous pour accéder à l'impression de mon CV.</p>
        
        <form action="{{ path('cv_download') }}" method="post" class="p-4">
            <div class="mb-3">
                <label for="name" class="form-label">Nom et Prénom</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Adresse Email</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">Numéro de Téléphone</label>
                <input type="tel" id="phone" name="phone" class="form-control">
            </div>
            <button type="submit" class="btn btn-success btn-lg w-100">Imprimer mon CV</button>
        </form>
    </div>
</body>
</html>
{% endblock %}